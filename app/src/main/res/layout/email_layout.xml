<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/draftTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="draft"
        android:textAllCaps="true"
        android:textColor="#FB5757"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/toTv1"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="To:"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sentEmailReceiverTv"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="receiver_email@gmail.com"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>

    <TextView
        android:id="@+id/sentEmailSubjectTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="email subject"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/sentEmailBodyTv"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_weight="1"
        android:maxLines="2"
        android:text="Body of the email with only two line shown. dgbvasfg haosuihfafhiasofiasohfioashfshfasiofhiashfioafhaisofhaioshfiaso"
        android:textSize="16sp" />


</LinearLayout>